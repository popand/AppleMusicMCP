{
  "name": "apple-music-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Apple Music - search catalog, manage playlists, access library",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "apple-music-mcp": "dist/index.js"
  },
  "scripts": {
