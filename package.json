  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "jsonwebtoken": "^9.0.2",
    "open": "^10.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
